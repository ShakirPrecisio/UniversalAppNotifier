<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UniversalAppNotifier" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/dark_blue</item>
        <item name="android:statusBarColor">@color/dark_blue</item>
    </style>

    <style name="SCREEN">
        <item name="android:background">@color/black</item>
    </style>

    <style name="MediumBoldText">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:gravity">center</item>
        <item name="drawableTint">@color/light_text_color</item>
        <item name="fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="MediumSemiBoldText">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:gravity">center</item>
        <item name="drawableTint">@color/light_text_color</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="SmallRegularText">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="drawableTint">@color/light_text_color</item>
        <item name="fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="MaterialCardViewStyle">
        <item name="cardBackgroundColor">@color/dark_gray</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>